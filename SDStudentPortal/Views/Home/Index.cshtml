

@{
    ViewBag.Title = "Home Page";
}

<style>
    .jumbotron
    {
        width:120%;
        margin-left:-10%; 
        background-color:rgba(248, 84, 84, 0.91);
    }
    .col-md-12
    {
        width:120%;
        margin-left:-10%;
        background-color:rgba(248, 84, 84, 0.91);
        height:30px;
    }
    #myCarousel
    {
        background-color:rgba(251, 4, 4, 0.21);
    }
</style>

<div class="jumbotron">
    <h1 style="font-size:30px;color:white;text-align:center;">Welcome to the Robertson College Student Portal!</h1>
</div>

<div class="container">
    <br>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            @*<li data-target="#myCarousel" data-slide-to="3"></li>*@
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="http://cdn.media.yp.ca/6358138/pcc_0_10270700_1440784556_r.jpg" alt="Chania" style="margin:0 auto;width:700px;height:408px">
            </div>

            <div class="item">
                <img src="http://www.robertsoncollege.com/site/assets/files/1110/vet.768x0.jpg" alt="Chania" style="margin:0 auto;width:700px;height:408px">
            </div>

            <div class="item">
                <img src="http://cdn.media.yp.ca/7966244/pcc_0_14863800_1440791254_r.jpg" alt="Flower" style="margin:0 auto;width:700px;height:408px">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev" style="color:white">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next" style="color:white">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div class="col-md-12" style="margin-top:35px;">
</div>

<div>
    <h2 style="text-align:center;font-size:70px;color:indianred;"><span class="glyphicon glyphicon-tasks"></span></h2>
    <p style="text-align:center;font-size:20px;">Check out our students blogs</p>
</div>

<div class="row">
    <div>
        @Html.Partial("_IndexPartialPrivate")
    </div>  
</div>

<div class="col-md-12" style="margin-top:35px;">
</div>

<div>
    <h2 style="text-align:center;font-size:70px;color:indianred;"><span class="glyphicon glyphicon-road"></span></h2>
    <p style="text-align:center;font-size:20px;">Sample Projects</p>
</div>